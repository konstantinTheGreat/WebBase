<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <error-page>
        <error-code>404</error-code>
        <location>/pages/error/error_404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/pages/error/error_500.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/error/error_500.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pages/auth/index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <display-name>RequestLoggingFilter</display-name>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>org.example.webbase.filter.RequestLoggingFilter</filter-class>
    </filter>
    <filter>
        <display-name>StatusCheckFilter</display-name>
        <filter-name>StatusCheckFilter</filter-name>
        <filter-class>org.example.webbase.filter.StatusCheckFilter</filter-class>
    </filter>
    <filter>
        <display-name>EncodingFilter</display-name>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.example.webbase.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/Controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StatusCheckFilter</filter-name>
        <url-pattern>/RedirectServlet</url-pattern>
    </filter-mapping>
</web-app>